Config { font = "xft:Bitstream Vera Sans Mono-8"
       , bgColor = "#1c1c1c"
       , fgColor = "#cacaca"
       , position = Static {xpos = 1280, ypos = 0, width = 1680, height = 16}
       , lowerOnStart = True
       , commands = [ Run Date "%A, %d %b %Y <fc=#FBAB3C>%H:%M:%S</fc>" "date" 10
                    , Run Com "skb" ["-1"] "kb" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %date%  "
       }

